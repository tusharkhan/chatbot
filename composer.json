{
    "name": "tusharkhan/chatbot",
    "description": "ðŸ¤– Modern PHP chatbot framework with multi-platform support (Telegram, Slack, Web). Build intelligent conversational bots with pattern matching, state management, and middleware. Works with any PHP framework or standalone.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "chatbot",
        "bot",
        "php",
        "telegram",
        "slack",
        "whatsapp",
        "messaging",
        "conversational-ai",
        "framework-agnostic",
        "laravel",
        "codeigniter",
        "webhook",
        "api",
        "conversation",
        "middleware",
        "pattern-matching"
    ],
    "authors": [
        {
            "name": "Tushar Khan",
            "email": "tushar.khan0122@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "jolicode/slack-php-api": "^4.8",
        "symfony/http-client": "^6.0|^7.0",
        "nyholm/psr7": "^1.8",
        "irazasyed/telegram-bot-sdk": "^3.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "TusharKhan\\Chatbot\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TusharKhan\\Chatbot\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}